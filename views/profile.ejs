{{> appPartials/header title="Profile Change"}}
  <!-- Start content -->
    <div class="content">

        <div class="">
            <div class="page-header-title">
                <h4 class="page-title">Change Your Profile</h4>
            </div>
        </div>

        <div class="page-content-wrapper ">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                {{!-- <div class="d-flex justify-content-between m-t-0 m-b-30">
                                    <a href="/posts" class="text-dark"><button class="btn btn-primary btn-lg waves-effect waves-light">Edit Post</button></a>
                                    <a href="/posts" class="text-white"><button class="btn btn-danger btn-lg waves-effect waves-light">Back to Posts</button></a>
                                </div> --}}
                                <div class="row">
                                    <div class="col-12">
                                        <ul class="nav nav-tabs" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">
                                                    <span class="d-block d-sm-none"><i class="fa fa-home"></i></span>
                                                    <span class="d-none d-sm-block">Profile</span>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="change-password-tab" data-toggle="tab" href="#change_password" role="tab" aria-controls="change-password" aria-selected="false">
                                                    <span class="d-block d-sm-none"><i class="fa fa-user"></i></span>
                                                    <span class="d-none d-sm-block">Change Password</span>
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content bg-light">
                                            <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                               <form action="" method="post">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="fullname">User Name</label>
                                                                <input type="text" id="fullname" name="fullname" value="{{user.fullname}}" class="form-control" placeholder="User Name">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="email">Email</label>
                                                                <input type="email" name="email" value="{{user.email}}" class="form-control" id="email" placeholder="Email">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <button class="btn btn-primary waves-effect waves-light">Update Profile</button>
                                                            <a href="/dashboard" class="text-white"><button type="button" class="btn btn-danger ml-2 waves-effect waves-light">Back to dashboard</button></a>
                                                        </div>
                                                    </div>
                                               </form>
                                            </div>
                                            <div class="tab-pane fade" id="change_password" role="tabpanel" aria-labelledby="change-password-tab">
                                                <form action="" method="post">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="old-pwd">Old Password</label>
                                                                <input type="password" name="old_password" class="form-control" id="old-pwd" placeholder="Old Password">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="new-pwd">New Password</label>
                                                                <input type="password" name="password" class="form-control" id="new-pwd" placeholder="New Password">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="confirm-pwd">Confrim Password</label>
                                                                <input type="password" name="confirm_password" class="form-control" id="confirm-pwd" placeholder="Confirm Password">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <button class="btn btn-primary waves-effect waves-light">Update Password</button>
                                                            <a href="/dashboard" class="text-white"><button type="button" class="btn btn-danger ml-2 waves-effect waves-light">Back to dashboard</button></a>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row -->
            </div><!-- container -->

        </div> <!-- Page content Wrapper -->

    </div> <!-- content -->

{{> appPartials/footer }}